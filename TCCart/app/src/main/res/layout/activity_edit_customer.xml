<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context="edu.gatech.seclass.tccart.MainActivity">
    
    <Button
        android:id="@+id/btnEditCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignRight="@+id/txtEmail"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:onClick="editCustomer"
        android:text="Edit Customer's Info" />

    <Button
        android:id="@+id/btnPrintCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEditCustomer"
        android:layout_alignLeft="@+id/btnEditCustomer"
        android:layout_alignStart="@+id/btnEditCustomer"
        android:layout_alignRight="@+id/btnEditCustomer"
        android:layout_alignEnd="@+id/btnEditCustomer"
        android:onClick="editCustomer"
        android:text="Print Customer's Card" />

    <EditText
        android:id="@+id/etEditFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/tvMsg"
        android:layout_alignLeft="@+id/tvMsg"
        android:layout_alignStart="@+id/tvMsg"
        android:layout_alignRight="@+id/tvMsg"
        android:layout_alignEnd="@+id/tvMsg" />

    <EditText
        android:id="@+id/etEditLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/etEditFirstName"
        android:layout_alignLeft="@+id/etEditFirstName"
        android:layout_alignStart="@+id/etEditFirstName"
        android:layout_marginTop="54dp"
        android:layout_alignRight="@+id/etEditFirstName"
        android:layout_alignEnd="@+id/etEditFirstName">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="email@email.com"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:layout_below="@+id/etEditQrCode"
        android:layout_marginTop="44dp"
        android:layout_above="@+id/btnPrintCard"
        android:layout_alignLeft="@+id/etEditQrCode"
        android:layout_alignStart="@+id/etEditQrCode"
        android:layout_alignRight="@+id/etEditQrCode"
        android:layout_alignEnd="@+id/etEditQrCode" />

    <EditText
        android:id="@+id/etEditQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="QRCode"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etEditLastName"
        android:layout_alignStart="@+id/etEditLastName"
        android:layout_alignRight="@+id/etEditLastName"
        android:layout_alignEnd="@+id/etEditLastName" />

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:minEms="14"
        android:text="Edit Customer Information Below"
        android:textSize="20dp"
        android:textStyle="bold" />
    
</RelativeLayout>
